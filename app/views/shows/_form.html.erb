<%= form_for(@show, remote: true) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
  <%= f.text_field :venue, placeholder: "Venue..." %>
</div>
<div class="field">
  <%= f.datetime_field :date %>
</div>
<div class="field">
  <%= f.text_field :show_type, placeholder: "Show Type..." %>
</div>
<div class="field">
  <%= f.url_field :url, placeholder: "Venue URL..." %>
</div>
<%= f.submit @show.new_record? ? "Book it!" : "Update this show", class: "btn btn-primary" %>
<% end %>